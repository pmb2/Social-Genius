# OpenAI API - Required for embeddings and competitor research
OPENAI_API_KEY=your-openai-api-key-here

# PostgreSQL connection (unified database solution)
DATABASE_URL=postgresql://username:password@localhost:5432/socialgenius
DATABASE_URL_DOCKER=postgresql://postgres:postgres@postgres:5432/socialgenius

# Authentik Authentication Configuration
AUTHENTIK_URL=https://auth.example.com
AUTHENTIK_CLIENT_ID=your-authentik-client-id
AUTHENTIK_CLIENT_SECRET=your-authentik-client-secret
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Groq API - For LLM responses
GROQ_API_KEY=your-groq-api-key-here

# Exa API - For web search
EXA_API_KEY=your-exa-api-key-here

# Google Maps API - Used for competitor research
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# JWT Secret for API token validation
JWT_SECRET=your-secret-key-for-jwt-make-this-very-secure-in-production

# X.com (Twitter) OAuth Configuration
X_CLIENT_ID=your-x-client-id-here
X_CLIENT_SECRET=your-x-client-secret-here
X_REDIRECT_URI=http://localhost:3000/api/auth/callback/twitter

# Google Business Profile API Configuration
# Required for Google OAuth (see src/docs/GOOGLE_OAUTH_SETUP.md for details)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLIENT_ID=your-oauth-client-id-from-google-cloud-console
GOOGLE_CLIENT_SECRET=your-oauth-client-secret-from-google-cloud-console
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google-auth/callback
GOOGLE_TOKEN_ENCRYPTION_KEY=random-32-char-string-for-token-encryption

# Feature flags for controlling Google OAuth
FEATURE_FLAG_GOOGLE_AUTH_WITH_OAUTH=true
FEATURE_FLAG_ENABLE_GOOGLE_OAUTH_MIGRATION=true
GOOGLE_API_USE_FALLBACK=false  # Set to true to use browser automation fallback

# Iron Session Secret
IRON_SESSION_SECRET=your-iron-session-secret-key

# X.com OAuth
X_CLIENT_ID=""
X_CLIENT_SECRET=""
X_REDIRECT_URI=http://localhost:3000/api/auth/callback/x