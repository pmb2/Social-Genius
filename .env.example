OPENAI_API_KEY=your-openai-api-key-here

# PostgreSQL connection (unified database solution)
DATABASE_URL=postgresql://username:password@localhost:5432/socialgenius
DATABASE_URL_DOCKER=postgresql://postgres:postgres@postgres:5432/socialgenius

# Authentik Authentication Configuration
AUTHENTIK_URL=https://auth.example.com
AUTHENTIK_CLIENT_ID=your-authentik-client-id
AUTHENTIK_CLIENT_SECRET=your-authentik-client-secret
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Groq API - For LLM responses
GROQ_API_KEY=your-groq-api-key-here

# Exa API - For web search
